@*Pętla po każdym pierwiastku*@
@foreach (var element in Model)
{
    <hr>
    @*Pokolorowanie każdego symbolu pierwiastka w zależności od rodzaju*@
    @switch (element.Type.ToString().ToLower())
    {
        case "nonmetal":
            <div>
                <span class="large_font" id="c_non_metal">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "noblegas":
            <div>
                <span class="large_font" id="c_noble_gas">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "alcaic":
            <div>
                <span class="large_font" id="c_alcaic">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "earthalcaic":
            <div>
                <span class="large_font" id="c_earth_alcaic">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "transitionmetal":
            <div>
                <span class="large_font" id="c_transition_metal">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "halogen":
            <div>
                <span class="large_font" id="c_halogen">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "metaloid":
            <div>
                <span class="large_font" id="c_metaloid">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "actinide":
            <div>
                <span class="large_font" id="c_actinide">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "lanthanoid":
            <div>
                <span class="large_font" id="c_lanthanoid">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        case "semiconductor":
            <div>
                <span class="large_font" id="c_semi_conductor">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div> break;
        default:
            <div>
                <span class="large_font">
                    @element.ShortName
                </span>
                <span class="small_font">
                    @element.LatinName
                </span>
            </div>                  break;
    } @*Stworzenie linku umożliwiającego przejść na stronę ze szczegółami wybranego pierwiastka*@
    <li style="text-decoration: none; list-style-type: none;">
        <h1>@Html.ActionLink(element.Name, "GetElement", "Home", new { elementShotName = element.ShortName }, null)</h1>
    </li> //Niepełny opis pierwiastka (więcej szczegółów po kliknięciu w link)
    <div class="description">
        <p>Liczba neutronów: @element.Neutrons</p>
        <p>Liczba protonów: @element.Protons</p>
    </div>}